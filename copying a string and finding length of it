#include <stdio.h>//header file
#include<string.h>//header file
void copy(char *a,char *b)//creating a function declaration 
{
   while(*a!='\0')//loop to iterate characters in the string
    {
        *b=*a;//assigning the values by pointing the address
        a++;//increments a value
        b++;// increments b value
    }
    *b='\0';//null is assigned to pinter b
}
int main()//execution stats from here
{ 
    int l;// declaration of l
    char s1[100],s2[100];//declaration of strings along with size
    char *x; // pointer declaration with variable x
    char *y;// pointer declaration with variable y
    x=s1;//string 1 is assigned to x
    y=s2;//string 2 is assigned to y
    printf("Enter the string s1:");// print statement
    scanf("%[^\n]s",s1);//read statement for string
    printf("The string is:");
    printf("%s\n",s1);//print statement for string
    copy(s1,s2);//calling function
    printf("The copied string s2 is:%s\n",s2);// print statement for string 2
    l=strlen(s2);// to find length of the string
    printf("The length of string s2 is:");// print statement 
    printf("%d",l);// print statement for lenth of the string
    return 0;// return type
}

Output:
Enter the string s1:Hema latha
The string is:Hema latha
The copied string s2 is:Hema latha
The length of string s2 is:10
