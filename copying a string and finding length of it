#include <stdio.h>
#include<string.h>//header file
void copy(char *a,char *b)//creating a function declaration 
{
   while(*a!='\0')
    {
        *b=*a;
        a++;
        b++;
    }
    *b='\0';
}
int main()
{ 
    int l;
    char s1[100],s2[100];
    char *x;
    char *y;
    x=s1;
    y=s2;
    printf("Enter the string s1:");
    scanf("%[^\n]s",s1);
    printf("The string is:");
    printf("%s\n",s1);
    copy(s1,s2);
    printf("The copied string s2 is:%s\n",s2);
    l=strlen(s2);
    printf("The length of string s2 is:");
    printf("%d",l);
    return 0;
}

Output:
Enter the string s1:Hema latha
The string is:Hema latha
The copied string s2 is:Hema latha
The length of string s2 is:10
