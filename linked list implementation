#include <stdio.h>
#include<stdlib.h>
int count=0;
struct node
{
    int data;
    struct node *next;
}*head;
void create()
{   int num;
    struct node *temp,*newnode;
      head=0;
    newnode=(struct node *)malloc(sizeof(struct node));
    printf("enter the data to create");
    scanf("%d",&newnode->data);
    newnode->next=0;
    if(head==0)
    {
        head=temp=newnode;
    }
    else
    {
        temp->next=newnode;
        temp=newnode;
    }
    printf("do u want to create anothe node?");
    scanf("%d",&num);
    if(num!=0)
    create();
}
