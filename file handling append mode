#include <stdio.h>
#include<stdlib.h>
#include<string.h>
int main()
{
    FILE *fp=NULL;
    char str[50];
    fp=fopen("abc.txt","a");
    if(fp==NULL)
    {
        printf("error");
        exit(1);
    }
    printf("enter the content to append: ");
    gets(str);
   // fputs(str,fp);//to add in the same line
    fprintf(fp ,"\n %s",str);//to add content in next line
    printf("successfully appended");
    fclose(fp);
}
