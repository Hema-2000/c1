#include <stdio.h>
#define N 5
int queue[N];
int front=-1;
int rear=-1;
void enqueue()
{
    int x;
    printf("enter the data");
    
    scanf("%d",&x);
   
    if(rear==N-1)//to check queue is empty or not
    {
        printf("overflow");
    }
    else if(front==-1 && rear ==-1)
    {
        front=rear=0;
        queue[rear]=x;
    }
    else
    {
        rear++;
        queue[rear]=x;
    }
}
void dequeue()
{
    if(front==-1 && rear ==-1)
    {
        printf("overflow");
    }
    else if(front==rear)
    {
       front=rear=-1;
    }
    else 
    {
        printf("%d",queue[front]);
        front++;
    }
}
void peak()
{
    if(front==-1 && rear ==-1)
    {
        printf("overflow");
    }
    else
    {
        printf("%d",queue[front]);
    }
}
 void display()
 {   
     if(front==-1 && rear ==-1)
    {
     printf("overflow");
    }
     else
    {

     for(int i=front;i<rear+1;i++)
     {
         printf("%d\n",queue[i]);
     }
    }
 }
int main()
{
    int choice;
    printf("\n\t QUEUE OPERATIONS USING ARRAY");
     printf("\n\t 1.ENQUEUE \n\t 2.DEQUEUE \n\t 3.DISPLAY\n\t 4.PEAK\n\t 5.EXIT");
      do
    {
        printf("\n Enter the Choice:");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
            {
                enqueue();
                break;
            }
            case 2:
            {
                dequeue();
                break;
            }
            case 3:
            {
                display();
                break;
            }
            case 4:
            {
                peak();
                break;
            }
            case 5:
            {
                printf("exit point");
                break;
            }
             default:
            {
                printf ("\n\t Please Enter a Valid Choice(1/2/3/4/5)");
            }
            }
            }

            while(choice!=5);
    return 0;
}
