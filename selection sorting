#include <stdio.h>
int swap(int *x,  int *y)
{
    int temp=*x;
    *x=*y;
    *y=temp;
}
int selection_sort(int arr[],int n)
{
    int i,j;
    for(i=0;i<n-1;i++)
    {
        for(j=i+1;j<n;j++)
        {
            if(arr[i]>arr[j])
            {
                swap(&arr[i],&arr[j]);
            }
        }
    }
}
int main()
{
   
   int arr[]={6,10,3,9,1};
   int n = sizeof(arr)/sizeof(arr[0]);
   selection_sort(arr,n);
   printf("sorted array  is:");
   for(int i=0;i<n;i++)
       printf("%d ",arr[i]);
    return 0;
}

output:
sorted array  is:1 3 6 9 10 
