#include <stdio.h>//header file
void copy(int *x,int *y)//creating a function declaration 
{
    int i;// declaration of variable
    for(i=0;i<6;i++)// for loop to iterate the array values
    {
        *(y+i)=*(x+i); //content with in the of x is assigned to the addres of y   
    }
    printf("elements at array 2:");//after copying print statement
    for(i=0;i<6;i++)
    { 
       printf(" \n%d",*(y+i));// print the final copied array  
    }
}
int main()//program ec=xecution starts from here
{
    int arr1[50],arr2[50];//declaration of 2 array along eith sizes
    int i;
    for(i=0;i<6;i++)//loop for printing the elements along with index
    {   
        printf("element at %d position:",i);
        scanf("%d",&*(arr1+i));
    }
    printf("printing elements at array 1\n");//print statement 
    for(i=0;i<6;i++)
    {
    
        printf(" %d\n",*(arr1+i));print the array elements
    }
    
    
    copy(arr1,arr2);//it calls copy function
    return 0;//return type
}
result:
element at 0 position:1
element at 1 position:2
element at 2 position:3
element at 3 position:4
element at 4 position:5
element at 5 position:6
printing elements at array 1
